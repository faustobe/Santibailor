<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="#4CAF50">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Le mie liste"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_delete_completate"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elimina completate"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ScrollView per liste + textbox nuova lista -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="80dp">

                <!-- Lista delle liste -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_liste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_lista_spesa"/>

                <!-- Card per nuova lista -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeColor="#4CAF50"
                    app:strokeWidth="2dp">

                    <EditText
                        android:id="@+id/et_nuova_lista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nuova lista..."
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:textColorHint="#BDBDBD"
                        android:background="@android:color/transparent"
                        android:padding="16dp"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:singleLine="true"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Empty state -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nessuna lista creata"
                android:textSize="18sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Tocca il pulsante + per creare la tua prima lista della spesa"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <!-- FAB per aggiungere nuova lista -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:contentDescription="Aggiungi lista"
        app:backgroundTint="#4CAF50"
        app:srcCompat="@drawable/ic_add"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
