<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:elevation="4dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#FFFFFF"
                android:contentDescription="Chiudi"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Organizza Giornata"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aggiungi impegni rapidamente"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp"/>

                <!-- Campo 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <EditText
                            android:id="@+id/et_impegno_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Impegno 1"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            android:inputType="textCapSentences"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <EditText
                                android:id="@+id/et_ora_1"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:hint="Ora (es. 09:00)"
                                android:inputType="time"
                                android:textSize="14sp"
                                android:background="@android:color/transparent"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Campo 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <EditText
                            android:id="@+id/et_impegno_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Impegno 2"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            android:inputType="textCapSentences"/>

                        <EditText
                            android:id="@+id/et_ora_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:hint="Ora (es. 10:30)"
                            android:inputType="time"
                            android:textSize="14sp"
                            android:background="@android:color/transparent"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Campo 3 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <EditText
                            android:id="@+id/et_impegno_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Impegno 3"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            android:inputType="textCapSentences"/>

                        <EditText
                            android:id="@+id/et_ora_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:hint="Ora (es. 14:00)"
                            android:inputType="time"
                            android:textSize="14sp"
                            android:background="@android:color/transparent"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Campo 4 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <EditText
                            android:id="@+id/et_impegno_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Impegno 4"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            android:inputType="textCapSentences"/>

                        <EditText
                            android:id="@+id/et_ora_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:hint="Ora (es. 16:00)"
                            android:inputType="time"
                            android:textSize="14sp"
                            android:background="@android:color/transparent"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Campo 5 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <EditText
                            android:id="@+id/et_impegno_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Impegno 5"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            android:inputType="textCapSentences"/>

                        <EditText
                            android:id="@+id/et_ora_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:hint="Ora (es. 18:00)"
                            android:inputType="time"
                            android:textSize="14sp"
                            android:background="@android:color/transparent"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Pulsante Salva -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_salva_impegni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salva tutti gli impegni"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@color/colorPrimary"
                    android:padding="16dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
