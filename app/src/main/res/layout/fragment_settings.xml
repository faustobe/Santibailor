<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header con indicatore Firebase -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/blue_primary"
            app:cardElevation="4dp"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Impostazioni"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <!-- Indicatore stato Firebase -->
                <View
                    android:id="@+id/firebase_status_indicator"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle_shape"
                    android:backgroundTint="@color/error_red"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Contenuto scrollabile -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <Button
                    android:id="@+id/btn_generali"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generali"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btn_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btn_ricorrenze"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ricorrenze"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btn_impegni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Impegni"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btn_liste_spesa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Liste della Spesa"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btn_notifiche"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notifiche"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btn_integrazioni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Integrazioni"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btn_privacy_sicurezza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Privacy e Sicurezza"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btn_supporto_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Supporto e Informazioni"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
