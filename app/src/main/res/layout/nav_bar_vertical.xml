<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2"
    android:padding="4dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_nav_santi"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_margin="2dp"
        android:contentDescription="@string/santi"
        app:icon="@drawable/ic_saint"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="20dp"
        android:backgroundTint="#55FFFFFF"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_nav_eventi"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_margin="2dp"
        android:contentDescription="@string/eventi"
        app:icon="@drawable/ic_event"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="20dp"
        android:backgroundTint="#55FFFFFF"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_nav_impegni"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="2dp"
        android:contentDescription="@string/impegni"
        app:icon="@drawable/ic_task"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="20dp"
        android:backgroundTint="#55FFFFFF"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_nav_taccuino"
        style="@style/Widget.Material3.Button.IconButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="2dp"
        android:contentDescription="@string/taccuino"
        app:icon="@drawable/ic_note"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="20dp"
        android:backgroundTint="#55FFFFFF"/>

</GridLayout>
