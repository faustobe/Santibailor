<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".presentation.features.settings.CategorySettingsFragment">

    <TextView
        android:id="@+id/categoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Impostazioni Categoria"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="9dp"/>

    <Button
        android:id="@+id/btn_back_to_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Torna alle Impostazioni"
        android:layout_margin="16dp"/>

    <FrameLayout
        android:id="@+id/settings_category_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/settingsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>